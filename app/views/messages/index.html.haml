  .chat_box
    -# ＃ヘッダー
    .chat_box__header
      .chat_box__header__groupname
        .chat_box__header__groupname__left_box
          = @group.name
        .chat_box__header__groupname__member_list
          Member  :
          - @group.users.each do |user|
            = user.name
      .chat_box__header__edit_btn
        = link_to "Edit", edit_group_path(@group), method: :get, class: 'edit-btn'
    -# ＃メッセージ
    .chat_box__messages
      .chat_box__messages__message
        = render @messages
        .chat_box__messages__message__info
          .chat_box__messages__message__info__name
          .chat_box__messages__message__info__time
        .chat_box__messages__message_text
    -# #フォーム
    .chat_box__form
      = form_for [@group, @message] do |f|
        .chat_box__form__new_message
          .chat_box__form__new_message__input_box
            = f.text_field :content, class: 'chat_box__form__new_message__input_box__text', placeholder: 'type a message'
            = f.label :image, class: 'chat_box__form__new_message__input_image' do
              = fa_icon 'picture-o', class: 'chat_box__form__new_message__input_image__icon'
              -# = fa_icon "image", class: 'chat_box__form__new_message__input_image__icon'
              = f.file_field :image, class: 'chat_box__form__new_message__input_image__file'
              -# %input.chat_box__form__new_message__input_image__file{type: "file"}
          = f.submit 'Send', class: 'chat_box__form__new_message__submit'