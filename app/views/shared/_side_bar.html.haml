.group_box
  .group_box__header
    %h3.group_box__header__box
      .group_box__header__box__name
        = current_user.name
      %ul.group_box__header__box__iconbox
        %li.group_box__header__box__iconbox__edit
          .group_box__header__box__iconbox__edit__icon
            = link_to new_group_path do
              = fa_icon "edit"
        %li.group_box__header__box__iconbox__setting
          .group_box__header__box__iconbox__setting__icon
            = link_to edit_user_path(current_user) do
              = fa_icon "cog"
  .group_box__groups
    .group_box__groups__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
